<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:stretchColumns="0">

                            <TableRow
                                android:background="@drawable/table_row_bg"
                                android:baselineAligned="false"
                                android:paddingBottom="8dp"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:paddingTop="8dp">

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text=" "
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="@string/properti_incaran"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="@string/properti_satu"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="@string/properti_dua"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="@string/properti_tiga"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="@string/properti_empat"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="@string/properti_lima"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/row_harga_jual_properti"
                                android:background="@drawable/table_row_bg"
                                android:padding="5dp">

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="@string/harga_jual_properti"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/row_luas_tanah"
                                android:background="@drawable/table_row_bg"
                                android:padding="5dp">

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="@string/luas_tanah"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/row_luas_bangunan"
                                android:background="@drawable/table_row_bg"
                                android:padding="5dp">

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="@string/luas_bangunan"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/row_usia_bangunan"
                                android:background="@drawable/table_row_bg"
                                android:padding="5dp">

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="@string/usia_bangunan"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />
                            </TableRow>

                        </TableLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:stretchColumns="*"
                            android:layout_marginTop="8dp">

                            <TableRow
                                android:id="@+id/row_harga_pasaran_meter"
                                android:background="@drawable/table_row_bg"
                                android:padding="5dp">

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="@string/harga_pasaran_per_meter"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_harga_pasaran_per_meter"
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="-"
                                    android:textColor="@color/colorAccent" />

                            </TableRow>

                            <TableRow
                                android:id="@+id/row_perbandingan_properti"
                                android:background="@drawable/table_row_last_bg"
                                android:padding="5dp">

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="@string/perbandingan_properti_incaran"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_perbandingan_properti"
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="-"
                                    android:textColor="@color/colorAccent" />

                            </TableRow>

                        </TableLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:stretchColumns="*"
                            android:layout_marginTop="8dp">

                            <TableRow
                                android:id="@+id/row_catatan_kondisi"
                                android:background="@drawable/table_row_bg"
                                android:padding="5dp">

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="@string/catatan_kondisi"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/txt_catatan_kondisi"
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="-"
                                    android:textColor="@color/colorAccent" />

                            </TableRow>

                            <TableRow
                                android:id="@+id/row_catatan_survey"
                                android:background="@drawable/table_row_last_bg"
                                android:padding="5dp">

                                <TextView
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="@string/catatan_survey"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_catatan_survey"
                                    android:background="@drawable/table_cell_bg"
                                    android:padding="8dp"
                                    android:text="-"
                                    android:textColor="@color/colorAccent" />
                            </TableRow>

                        </TableLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>